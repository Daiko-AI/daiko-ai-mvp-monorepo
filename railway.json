{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/selenium-worker/Dockerfile",
    "watchPatterns": [
      "/apps/selenium-worker/**",
      "/packages/shared/**",
      "/packages/x-scraper/**",
      "/pnpm-lock.yaml",
      "/turbo.json"
    ]
  },
  "deploy": {
    "startCommand": null,
    "numReplicas": 1,
    "restartPolicyType": "NEVER",
    "cronSchedule": "0 * * * *"
  }
}
