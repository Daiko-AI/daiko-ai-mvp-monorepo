{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm run build:selenium-worker",
    "nixpacksPlan": {
      "phases": {
        "build": {
          "cmds": ["pnpm build:selenium-worker"]
        },
        "setup": {
          "nixPkgs": ["chromium", "chromedriver", "nodePackages.pnpm"],
          "aptPkgs": [
            "libnss3",
            "libxss1",
            "libasound2",
            "libatk1.0-0",
            "libatk-bridge2.0-0",
            "libcups2",
            "libgbm1",
            "libxshmfence1",
            "libx11-xcb1",
            "libxcb1",
            "fonts-noto-cjk"
          ]
        },
        "install": {
          "cmds": ["pnpm install --frozen-lockfile"]
        }
      }
    },
    "watchPatterns": ["/apps/selenium-worker/**"]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "cronSchedule": "*/10 * * * *",
    "startCommand": "pnpm start:selenium-worker",
    "sleepApplication": false,
    "multiRegionConfig": {
      "asia-southeast1-eqsg3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "NEVER"
  }
}
