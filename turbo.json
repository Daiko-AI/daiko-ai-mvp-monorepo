{
  "$schema": "https://turbo.build/schema.v2.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "HELIUS_API_KEY",
        "OPENAI_API_KEY",
        "FIRECRAWL_API_KEY",
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_SECRET",
        "WEB_PUSH_VAPID_PRIVATE_KEY",
        "WEB_PUSH_VAPID_PUBLIC_KEY"
      ],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:cron": {
      "cache": false,
      "persistent": true
    },
    "job:token-price": {
      "cache": false
    },
    "job:news-scraper": {
      "cache": false
    },
    "job:x-scraper": {
      "cache": false
    }
  }
}
